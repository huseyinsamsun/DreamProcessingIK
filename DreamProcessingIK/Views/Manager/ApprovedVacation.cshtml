@model List<VacationConfirmedDto>
@{
    ViewData["Title"] = "ApprovedVacation";
    Layout = "~/Views/Shared/_Manager.cshtml";
}

<h1>İzin İşlemleri </h1>

<table class="table table-bordered table-striped">
    <tr>
        <th>İsim Soyisim</th>
        <th>İzin Adı</th>
        <th>Onay Durumu</th>
        <th></th>

    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan=3>Hiç bir üye yoktur</td>
        </tr>
    }
    else
    {
        @foreach (var item in Model)
        {
<tr>
    <td>@item.FullName</td>
    <td>@item.Name</td>
    <td>@item.IsConfirmed</td>
    @if (item.IsConfirmed == false)
    {
        <td>
            <a href="/Manager/VacationConfirm?id=@item.UserId" type="sumbit" class="btn btn-success"> İzini Onayla.</a>
        </td>

    }
    else
    {
        <td>
            <a href="/Manager/VacationConfirm?id=@item.UserId" type="sumbit" class="btn btn-danger"> İzini İptal Et.</a>
        </td>


    }

</tr>
        }
    }
</table>