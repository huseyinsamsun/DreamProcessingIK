@model AppUser
@{
    Layout = "~/Views/Shared/_Manager.cshtml";
}

<h1>Yorumunuzu Ekleyiniz </h1>

<form asp-controller="Manager" asp-action="AddComment" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group first">
        <label asp-for="Comment">Yorumunuz</label>
        <input asp-for="Comment" class="form-control">
        <input asp-for="Id" class="form-control" type="hidden">
    </div>

    <input type="submit" value="Kaydet" class="btn btn-block btn-primary">

</form>