@model AddBountyDto

@{
    ViewData["Title"] = "AddBounty";
    Layout = "~/Views/Shared/_Manager.cshtml";
}

<h1>Prim Tipi Ekle</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddBounty">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"> Miktar</label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Açıklama</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



