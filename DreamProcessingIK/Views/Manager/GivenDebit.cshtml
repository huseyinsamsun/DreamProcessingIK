@model List<RequestDebitVmDto>
@{
    Layout = "~/Views/Shared/_Manager.cshtml";
}




<h1>Zİmmet ekle</h1>

<table class="table table-bordered table-striped">
    <tr>
    @*<th> UserId</th>*@
    <th>İsim</th>
    <th>Soyisim</th>
    <th>Başlangıç Tarihi</th>
    <th>Bitiş Tarihi</th>
    <th>Kategori Adı</th>
    <th>Ürün Adı</th>
    <th>Ürün Detay</th>
    </tr>
    @if(Model.Count()==0)
    {
        <tr>
            <td colspan=3>Hiç bir zimmet yoktur</td>
        </tr>
    }
    else
    {
        @foreach (var item in Model)
       {
           <tr>
               @*<td>@item.UserId</td>*@
               <td>@item.FirstName</td>
               <td>@item.LastName</td>
               <td>@item.StartDate</td>
               <td>@item.EndDate</td>
               <td>@item.CategoryName</td>
               <td>@item.ProductName</td>
               <td>@item.ProductDetail</td>
           </tr>
       }
    }
</table>

