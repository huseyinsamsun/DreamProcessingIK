@model List<UserNotConfirmedDto>
@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<table class="table table-bordered table-striped">
    <tr>
       
        <th>Kullanıcı Adı</th>
        <th>Onay Durumu</th>
        <th></th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan=3>Hiç bir üye yoktur</td>
        </tr>
    }
    else
    {
        @foreach (var item in Model)
        {
            <tr>
               
                <td>@item.UserName</td>
                <td>@item.IsConfirmed</td>
                <td><a class="btn btn-success" asp-controller="Admin" asp-action="UsersNotConfirmed" asp-route-id="@item.UserId">  Doğrula</a> </td>
            </tr>


        }
    }



</table>

