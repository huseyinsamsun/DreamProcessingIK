@model UserPassivizationDto
@{
   Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>PassiveUser</title>
</head>
<body>
    <h2>@ViewBag.userName</h2>
    <hr />
    <form asp-controller="Admin" asp-action="PassiveUser" method="post">
        <input type="hidden" asp-for="UserId"/>
       @if(Model.Exist)
        {
            <div class="form-check">
                <input asp-for="Exist" type="checkbox" class="form-check-input" checked>
                <label asp-for="Exist" class="form-check-label"></label>
            </div>
        }
        else
        {
            <div class="form-check">
                <input asp-for="Exist" type="checkbox" class="form-check-input">
                <label asp-for="Exist" class="form-check-label"></label>
            </div>
        }
        <input class="btn btn-success" type="submit" value="Kaydet" />
    </form>


</body>
</html>