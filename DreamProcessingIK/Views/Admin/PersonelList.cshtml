@model List<AppUser>
@{
    ViewData["Title"] = "Users";
     Layout = "~/Views/Shared/_Layout.cshtml";
     
}
<table class="table table-bordered table-striped">
    <tr>
     <th>User Id</th>
     <th>User Name</th>
     <th>Email</th>
     <th>Roller Atama</th>
     <th>Rol Atama</th>

    </tr>
    @if(Model.Count()==0)
    {
        <tr>
            <td colspan=3>Hiç bir üye yoktur</td>
        </tr>
    }
    else
    {
        @foreach (var item in Model)
       {
           <tr>
               <td>@item.Id</td>
               <td>@item.UserName</td>
               <td>@item.Email</td>
               <td user-roles="@item.Id"></td>
               <td><a class="btn btn-success" asp-action="RoleAssign" asp-route-id="@item.Id">  Rol ata</a> </td>
               <td><a class="btn btn-success" asp-controller="Admin" asp-action="PassiveUser" asp-route-id="@item.Id">  Üyeyi Aktif/Pasif Hale Getir</a> </td>
           </tr>
       }
    }
</table>
