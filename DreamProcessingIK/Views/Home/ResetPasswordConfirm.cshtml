@model Entities.Dtos.UserForPasswordResetDto



<h1>ResetPasswordConfirmation</h1>

@if(ViewBag.status=="succesful")
{
    <div class="alert alert-info">Şifreniz başarıyla yenilenmiştir.</div>
}
else
{
    <hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ResetPasswordConfirm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
     
            <div class="form-group">
                <label asp-for="PasswordNew" class="control-label"></label>
                <input asp-for="PasswordNew" class="form-control" />
                <span asp-validation-for="PasswordNew" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

}




